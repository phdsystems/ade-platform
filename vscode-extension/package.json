{
  "name": "ade",
  "displayName": "ADE",
  "publisher": "your-org",
  "version": "0.0.1",
  "engines": { "vscode": "^1.90.0" },
  "repository": { "type": "git", "url": "https://example.com/your-org/ade-platform.git" },
  "files": ["out/**/*", "package.json", "tsconfig.json"],
  "activationEvents": ["onCommand:ade.scaffoldPreview"],
  "contributes": {
    "commands": [{ "command": "ade.scaffoldPreview", "title": "ADE: Scaffold Preview" }],
    "configuration": {
      "type": "object",
      "title": "ADE",
      "properties": {
        "ade.coreBinaryPath": { "type": "string", "default": "ade-core", "description": "Path to ade-core binary" }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && vsce package --no-dependencies",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.1.1",
    "typescript": "^5.4.0"
  }
}
